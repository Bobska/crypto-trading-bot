# Aggressive Trading Profile
# Tight grids, larger positions, higher risk/reward
# Best for: Volatile markets, experienced traders, high-risk tolerance

# Binance Testnet API Keys
# Get your keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET=your_testnet_secret_key_here

# Trading Parameters
SYMBOL=BTC/USDT
BUY_THRESHOLD=0.5
SELL_THRESHOLD=0.5
TRADE_AMOUNT=0.002

# Risk Management
STOP_LOSS_PERCENTAGE=5.0
USE_TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=2.0

# Position Sizing
MIN_POSITION_SIZE=0.001
MAX_POSITION_SIZE=0.005
BASE_POSITION_SIZE=0.002

# Execution
CHECK_INTERVAL=15

# AI Configuration
AI_ENABLED=true
AI_API_URL=http://localhost:8000
AI_CONFIRMATION_REQUIRED=false

# Profile Info
PROFILE_NAME=aggressive
PROFILE_DESCRIPTION=Aggressive strategy with tight grids and larger positions
