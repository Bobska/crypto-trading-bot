# Conservative Trading Profile
# Wide grids, smaller positions, lower risk
# Best for: Stable markets, beginners, risk-averse traders

# Binance Testnet API Keys
# Get your keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET=your_testnet_secret_key_here

# Trading Parameters
SYMBOL=BTC/USDT
BUY_THRESHOLD=2.0
SELL_THRESHOLD=2.0
TRADE_AMOUNT=0.0005

# Risk Management
STOP_LOSS_PERCENTAGE=2.0
USE_TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=1.0

# Position Sizing
MIN_POSITION_SIZE=0.0003
MAX_POSITION_SIZE=0.001
BASE_POSITION_SIZE=0.0005

# Execution
CHECK_INTERVAL=60

# AI Configuration
AI_ENABLED=true
AI_API_URL=http://localhost:8000
AI_CONFIRMATION_REQUIRED=true

# Profile Info
PROFILE_NAME=conservative
PROFILE_DESCRIPTION=Conservative strategy with wide grids and smaller positions
