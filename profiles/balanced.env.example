# Balanced Trading Profile
# Medium grids, moderate positions, balanced risk/reward
# Best for: Normal market conditions, experienced traders, default settings

# Binance Testnet API Keys
# Get your keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET=your_testnet_secret_key_here

# Trading Parameters
SYMBOL=BTC/USDT
BUY_THRESHOLD=1.0
SELL_THRESHOLD=1.0
TRADE_AMOUNT=0.001

# Risk Management
STOP_LOSS_PERCENTAGE=3.0
USE_TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=1.5

# Position Sizing
MIN_POSITION_SIZE=0.0005
MAX_POSITION_SIZE=0.002
BASE_POSITION_SIZE=0.001

# Execution
CHECK_INTERVAL=30

# AI Configuration
AI_ENABLED=true
AI_API_URL=http://localhost:8000
AI_CONFIRMATION_REQUIRED=false

# Profile Info
PROFILE_NAME=balanced
PROFILE_DESCRIPTION=Balanced strategy with moderate grids and positions
